#course-structure
    background #fff
    padding-left .8rem
    padding-right .8rem  
    .card-grid
        max-width 1080px
        margin auto
        padding-bottom 2rem
        .card
            background lighten($gr,60%)
            border-radius 0 .6rem .6rem .6rem
            box-shadow 6px 16px 12px lighten($gr, 40%)
            margin-bottom 3rem

            .card-tab
                color darken($ora, 50%)
                padding .6rem 2rem 0 1rem 
                border-radius .6rem 2rem 0 0
                display inline-block
                background lighten($gr,60%) 
                margin -1rem 0 0 0
        .card:nth-child(1)
            background lighten($gr,30%)
            .card-tab 
                background lighten($gr,30%)
@media (min-width: 620px), screen and (orientation: landscape)
    #course-structure
        .card-grid
            display grid
            grid-template-columns repeat(2, 1fr)
            grid-template-rows 2
            grid-gap 2.5rem 1rem
            .card 
                margin-bottom 0
@media screen and (min-width: 960px)
    #course-structure 
        .card-grid
            grid-template-columns repeat(3,1fr)