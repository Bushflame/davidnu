// temp
html  
body  
    height 100%
body
    background lighten($gr,60%)
    margin-top 5rem
div
header
span
figure
figcaption
#section
.section 
    box-sizing border-box
    margin 0
    padding 0
h1  
h2  
h3  
h4  
    font-family 'Times New Roman'
    margin 0

h1  
    color lighten($ora, 20%)
    font-size 2rem 
    text-align center
    text-transform uppercase
    font-weight 300
h2  
    color darken($gr,30%)
    font-size 3rem
    font-weight 300
    text-align center
    text-transform uppercase
    text-shadow 2px 2px 2px #fff    
h3  
    color darken($gr,60%)
    font-size 1.8rem
    line-height 1
    margin 0
    text-transform capitalize
p  
    color darken($br,50%) 
    font-size 1.2rem
    line-height 1.4
    margin-top 0
.section 
    padding 3rem 0
    
.tag
    text-transform capitalize
    font-size 1.5rem
    color darken($ora,60%)
    margin-top 0
    text-align center
.logo
    display inline-block
ul  
    color #965426
    font-size 1.5rem

//flex-system
.flext 
    display flex
    flex-direction row
    flex-wrap wrap
    // justify-content space-between
    box-sizing border-box
    max-width 1080px
    margin auto
.half 
    padding 1rem
    box-sizing border-box
    width 100%
    @media screen and (min-width: 600px)  
        width 49%

.quarter
    padding 1rem
    margin 1rem 0
    @media screen and (min-width: 440px)      
        width 80%
    @media screen and (min-width: 640px)          
        width 50%
    @media screen and (min-width: 720px)  
        width 40%
    @media screen and (min-width: 1020px)  
        width 24%
.third 
    padding 1rem 
    margin-top 1rem
    box-sizing border-box
    width 100%
@media screen and (min-width: 440px)
    .third      
        width 80%
@media screen and (min-width: 640px)
    .third
        width 49%
@media screen and (min-width: 960px)
    .third    
        width 32%
        